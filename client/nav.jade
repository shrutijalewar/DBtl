nav.top-bar(data-topbar, role="navigation", ng-controller='NavCtrl')
   ul.title-area
      li.name
         h1
            a(ui-sref='home') DBtl
      li.toggle-topbar.menu-icon
         a(href="/#/")
            span
   section.top-bar-section
      ul.right(ng-hide='username')
         li: a(ui-sref='register') Register
         li: a(ui-sref='login') Login
      ul.right(ng-show='username')
         li: a(ui-sref='home') Home
         li: a(ui-sref='dashboard') Dashboard
         li: a(ui-sref='profile') Profile
         li.divider
         li: a(ng-click='logout()') Logout

