#message
    .row
        .medium-6.columns
            img.msg-img
        .medium-6.columns
            fieldset
                legend Send a Message
                .row.collapse
                    .small-3.large-2.columns
                        .prefix To:
                    .small-9.large-10.columns
                        input(type="text", ng-model='message.pic')
                .row.collapse
                    .small-12.columns
                        textarea(rows="10", placeholder="Your Message Here...", ng-model='message.body')
                .row.collapse
                    .small-3.columns
                        a(href="#" class="button postfix",ng-click='sendMessage()') Send


