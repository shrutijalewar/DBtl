h1 Login
.row
    .medium-12.columns.auth-forms
        form
            .row
                .small-6.columns
                    label(for='username') Username
                        input#username(type='text', name='username', ng-model='user.username', autofocus)
                .small-6.columns
            .row
                .small-6.columns
                    label(for='password') Password
                        input#password(type='password', name='password', ng-model='user.password')
                .small-6.columns
            .row
                .small-6.columns
                    button(ng-click='submit()') Login
                .small-6.columns

